.row-fluid
  .span3
    .modal{:style => "position: relative; top: auto; left: auto; margin: 0 auto 20px; z-index: 1; width:100%;"}
      .modal-header
        %h4 Search a name
      .modal-footer
        %form.simple_form{:method => "post", :action => search_victims_path}
          %input.span12{:type => "text", :name => "name", :size => "50", :placeholder => "Juan Dela Cruz" }
          %input.span12.btn.btn-info{:type => "submit", :value => "Look for this person"}
    .modal{:style => "position: relative; top: auto; left: auto; margin: 0 auto 20px; z-index: 1; width:100%;"}
